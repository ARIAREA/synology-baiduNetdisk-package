#!/bin/sh

case $1 in
    start)
        ### Start this package.
        docker run -d johnshine/baidunetdisk-crossover-vnc:latest > /tmp/container_id
        exit $?
    ;;
    stop)
        ### Stop this package.
        docker stop `cat /tmp/container_id`
        exit $?
    ;;
    status)
        ### Check package alive.
        docker ps --no-trunc -q |grep `cat /tmp/container_id`
        exit $?
    ;;
esac

